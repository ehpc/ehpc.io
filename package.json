{
  "name": "ehpc.io",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.7.0"
  },
  "packageManager": "bun@1.2.22",
  "scripts": {
    "dev": "vite",
    "build": "bun fmt && bun lint && bun wasm:build && tsc && vite build",
    "preview": "vite preview",
    "lint": "bun lint:css && bun lint:ts",
    "lint:ts": "oxlint --fix",
    "lint:css": "stylelint --fix 'src/**/*.css'",
    "fmt": "dprint fmt",
    "test:all": "bun wasm:test && bun test",
    "wasm:test": "cd wasm && cargo test",
    "wasm:build": "wasm-pack build ./wasm --target bundler --release",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "dprint": "^0.50.1",
    "husky": "^9.1.7",
    "oxlint": "^1.14.0",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.3.1",
    "stylelint": "^16.23.1",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "~5.8.3",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.1.4",
    "vite-plugin-wasm": "^3.5.0"
  }
}
