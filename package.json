{
  "name": "ehpc.io",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm fmt && pnpm lint && pnpm wasm:build && tsc && vite build",
    "preview": "vite preview",
    "lint": "pnpm lint:css && pnpm lint:ts",
    "lint:ts": "oxlint --fix",
    "lint:css": "stylelint --fix 'src/**/*.css'",
    "fmt": "dprint fmt",
    "test": "pnpm wasm:test && vitest run",
    "coverage": "vitest run --coverage",
    "wasm:test": "cd wasm && cargo test",
    "wasm:build": "pnpm wasm:build:reverse4bits",
    "wasm:build:reverse4bits": "wasm-pack build ./wasm --target bundler --release -- --no-default-features --features reverse4bits",
    "wasm:build:dummy": "wasm-pack build ./wasm --target bundler --release -- --no-default-features --features dummy"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "dprint": "^0.50.1",
    "oxlint": "^1.12.0",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.2.4",
    "stylelint": "^16.23.1",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "~5.8.3",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.1.2",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
